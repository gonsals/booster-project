---
const { set } = Astro.props;
---

<article
    class={`relative rounded-xl border bg-white p-5 shadow-sm transition ${
        set.isUpcoming ? "opacity-80" : "hover:-translate-y-0.5 hover:shadow-md"
    }`}
>
    {
        set.isUpcoming && (
            <span class="absolute right-3 top-3 rounded-full bg-amber-100 px-2.5 py-1 text-xs font-semibold text-amber-700">
                Próximamente
            </span>
        )
    }

    <a
        href={!set.isUpcoming ? `/sets/boosters/${set.code}` : undefined}
        class={set.isUpcoming
            ? "pointer-events-none text-gray-400"
            : "block text-lg font-semibold text-sky-700 hover:underline"}
        transition:name={`set-title-${set.code}`}
        data-astro-prefetch="hover"
    >
        {set.name}
    </a>

    <p class="mt-2 text-sm text-gray-600">
        <span class="text-gray-400">Lanzamiento:</span>{" "}
        <span class="font-medium">{set.releaseDate}</span>
    </p>

    <div class="mt-4 flex flex-wrap gap-2">
        {
            set.boosters.play && (
                <span class="rounded-md bg-sky-100 px-2 py-1 text-xs font-medium text-sky-700">
                    Play Booster
                </span>
            )
        }
        {
            set.boosters.collector && (
                <span class="rounded-md bg-purple-100 px-2 py-1 text-xs font-medium text-purple-700">
                    Collector
                </span>
            )
        }
    </div>

    {
        set.isUpcoming && (
            <p class="mt-3 text-xs text-gray-400">
                Este set aún no ha sido lanzado.
            </p>
        )
    }
</article>
